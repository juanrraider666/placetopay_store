<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="page-top">
        <header class="header">
            <nav class="navbar navbar-expand-lg navbar-dark justify-content-between">
                <a class="navbar-brand" href="/">
                    <img src="https://dev.placetopay.com/static/co/sites/S-00000044/logo.png"
                         width="50"
                         height="50"
                         alt="Evertec"
                    >

                    <span class="p-3">Test Technical Senior PHP Symfony </span>
                </a>

                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_order_list') }}">
                            My Orders
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_products') }}">
                            Products
                        </a>
                    </li>
                </ul>
            </nav>
        </header>

        {% for flash in app.session.flashBag.get('success') %}
            <div class="alert alert-success">
                {{ flash }}
            </div>
        {% endfor %}
    </div>
        {% block body %}{% endblock %}
    </body>
</html>
